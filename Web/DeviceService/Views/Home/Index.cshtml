@section scripts {
  @Scripts.Render("~/bundles/app")
}

<div class="page-header">
  <h1>DeviceService</h1>
</div>

<div class="row">

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Values</h2>
      </div>
      <div class="panel-body">
        <ul class="list-unstyled" data-bind="foreach: values">
          <li>
            <strong><span data-bind="text: DeviceName"></span></strong>: <span data-bind="text: Title"></span>
            <!-- New code -->
            <small><a href="#" data-bind="click: $parent.getValueDetail">Details</a></small>
          </li>
        </ul>
      </div>
    </div>
    <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
  </div>

  <!-- ko if:detail() -->

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Detail</h2>
      </div>
      <table class="table">
        <tr><td>Device</td><td data-bind="text: detail().DeviceName"></td></tr>
        <tr><td>Title</td><td data-bind="text: detail().Title"></td></tr>
        <tr><td>Data</td><td data-bind="text: detail().Data"></td></tr>
      </table>
    </div>
  </div>

  <!-- /ko -->

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="panel-title">Add Value</h2>
      </div>

      <div class="panel-body">
        <form class="form-horizontal" data-bind="submit: addValue">
          <div class="form-group">
            <label for="inputDevice" class="col-sm-2 control-label">Device</label>
            <div class="col-sm-10">
              <select id="inputDevice" data-bind="options:devices, optionsText: 'Name', value: newValue.Device"></select>
            </div>
          </div>

          <div class="form-group" data-bind="with: newValue">
            <label for="inputTitle" class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputTitle" data-bind="value:Title" placeholder="Title" />
            </div>

            <label for="inputData" class="col-sm-2 control-label">Data</label>
            <div class="col-sm-10">
              <input type="number" step="any" class="form-control" id="inputData" data-bind="value:Data" placeholder="0.00" />
            </div>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>


</div>